#include "dance.dtsi"

/ {
    chosen {
        zmk,kscan = &mock_kscan;  // Override to use mock kscan
        zmk,physical-layout = &physical_layout0;
    };
    
    mock_kscan: mock_kscan_0 {
        compatible = "zmk,kscan-mock";
        columns = <0>;
        rows = <0>;
        events = <0>;
    };
};

// Update physical layout to reference the mock kscan for dongle
&physical_layout0 {
    kscan = <&mock_kscan>;
};

// Disable the original kscan0 for dongle builds
&kscan0 {
    status = "disabled";
};
